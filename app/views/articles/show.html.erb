<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Post content-->
            <article>
                <!-- Post header-->
                <header class="mb-4">
                    <!-- Post title-->
                    <h1 class="fw-bolder mb-1"><%= @article.title %></h1>
                    <!-- Post meta content-->
                    <div class="text-muted fst-italic mb-2">Posted on <%= @article.created_at.strftime("%d.%m.%Y") %> by <%= @article.user.nickname %></div>
                    <!-- Post categories-->
                    <a class="badge bg-secondary text-decoration-none link-light" href="#!">Web Design</a>
                </header>
                <!-- Preview image figure-->
                <figure class="mb-4">
                  <% if @article.picture? %>
                    <%= image_tag(@article.picture.url, class: "img-fluid rounded") %>
                  <% else %>
                    <%= image_tag "unknown.png", height: "400px", width: "600px", class: "img-fluid rounded" %>
                  <% end %>
                   <!-- <img class="img-fluid rounded" src="https://dummyimage.com/900x400/ced4da/6c757d.jpg" alt="..." /> -->
                </figure>
                <!-- Post content-->
                <section class="mb-5">
                    <p class="fs-5 mb-4"><%= @article.content %></p>
                </section>
            </article>
            </div>

            <div class="col-lg-4">
                <!-- Categories widget-->
                <div class="card mb-4">
                    <div class="card-header">Categories</div>
                    <%= render 'layouts/categories' %>
                </div>

                <%= render 'layouts/admin_widget' %>

                <!-- Side widget-->
                <div class="card mb-4">
                    <div class="card-header">Side Widget</div>
                    <div class="card-body">You can put anything you want inside
                      of these side widgets. They are easy to use, and feature
                      the Bootstrap 5 card component!</div>
                </div>
          </div>
        </div>
      </div>
