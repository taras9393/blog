<% @articles = Article.where('published_at <= ?', DateTime.now) %>
<div class="card mb-4">
    <div class="card-header">Top articles</div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
              <% if @articles.empty? %>
                <ul class="list-unstyled mb-0 text-justify ml-100">
                  <li class="catg"> No articles at this moment</li>
                </ul>
              <% else %>
              <% @articles.sort_by{|a| a.get_likes.count }.reverse.first(5).each do |article| %>
                <ul class="list-unstyled mb-0 text-justify ml-100">
                  <li class="catg"><%= link_to article.title, article_path(article.id) %></li>
                </ul>
              <% end %>
            <% end %>
            </div>
        </div>
    </div>
</div>
